<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header class="bg-dark text-white p-3">
        <h2 class="mb-0">DVNA - Damn Vulnerable .NET Application</h2>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar p-3">
                <h5>Modules</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" href="/">Accueil</a></li>
                    <li class="nav-item"><a class="nav-link" href="/SqlInjection">Injection SQL</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Xss">Cross-Site Scripting (XSS)</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Auth">Authentification faible</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Csrf">CSRF</a></li>
                    <li class="nav-item"><a class="nav-link" href="/FileUpload">Upload de fichiers</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Injectcommande">Command Injection</a></li>
                </ul>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <p>DVNA © 2025 - À des fins éducatives uniquement </p>
    </footer>

    <!--  -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

